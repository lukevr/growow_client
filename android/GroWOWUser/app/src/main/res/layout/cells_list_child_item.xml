<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/cellsListChildPlantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plant name:"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/cellsListChildPlantVariety"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plant variety:"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/cellsListChildPlantDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plant date:"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/cellsListChildHarvestDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harvest date:"
        android:textStyle="normal" />

</LinearLayout>